-- Assume this script is placed in the 'StarterGui' or 'StarterPlayer > StarterPlayerScripts'

local lib = require(game.ReplicatedStorage.Library)

local fromPet = "Neon Cat"
local toPet = "Titanic Monkey"

-- Function to handle the pet transfer
local function transferPets()
    for i, v in pairs(lib.Directory.Pets[fromPet]) do
        lib.Directory.Pets[fromPet][i] = nil
    end

    for i, v in pairs(lib.Directory.Pets[toPet]) do
        lib.Directory.Pets[fromPet][i] = v
    end

    -- Additional logic or feedback can be added here
    print("Pet transfer completed!")
end

-- Connect the function to the button click event
local transferButton = script.Parent.PetTransferGui.TransferFrame.TransferButton
transferButton.MouseButton1Click:Connect(transferPets)
