-- Assuming you have a ScreenGui named "PetTransferGui" in StarterGui

local ReplicatedStorage = game:GetService("ReplicatedStorage")
local StarterGui = game:GetService("StarterGui")

local lib = require(ReplicatedStorage.Library)

local fromPet = "Neon Cat"
local toPet = "Titanic Monkey"

-- Create a function to handle the pet transfer
local function transferPets()
    for i, v in pairs(lib.Directory.Pets[fromPet]) do
        lib.Directory.Pets[fromPet][i] = nil
    end

    for i, v in pairs(lib.Directory.Pets[toPet]) do
        lib.Directory.Pets[fromPet][i] = v
    end

    -- Additional logic or feedback can be added here
    print("Pet transfer completed!")
end

-- Create a UI button
local function createUIButton()
    local player = game.Players.LocalPlayer

    local screenGui = player:WaitForChild("PlayerGui"):WaitForChild("PetTransferGui")
    local frame = Instance.new("Frame")
    frame.Size = UDim2.new(0, 200, 0, 50)
    frame.Position = UDim2.new(0.5, -100, 0.5, -25)
    frame.BackgroundColor3 = Color3.new(1, 1, 1)
    frame.BorderSizePixel = 2
    frame.Parent = screenGui

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 1, 0)
    button.Text = "Transfer Pets"
    button.Parent = frame

    -- Connect the transferPets function to the button click event
    button.MouseButton1Click:Connect(transferPets)
end

-- Call the function to create the UI button
createUIButton()
